{
    "name": "nrbusinesssystems/maximo-query",
    "description": "Easily retrieve data from Maximo using the REST API",
    "keywords": [
        "nrbusinesssystems",
        "maximo-query"
    ],
    "homepage": "https://github.com/nrbusinesssystems/maximo-query",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Christopher Abey",
            "email": "christopher.abey@networkrail.co.uk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "8.0",
        "guzzlehttp/guzzle": "^7.3",
        "ext-json": "*"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Nrbusinesssystems\\MaximoQuery\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nrbusinesssystems\\MaximoQuery\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Nrbusinesssystems\\MaximoQuery\\Providers\\MaximoQueryServiceProvider"
            ],
            "aliases": {
                "MaximoQuery": "Nrbusinesssystems\\MaximoQuery\\Facades\\MaximoQuery"
            }
        }
    },
    "require-dev": {
        "nunomaduro/collision": "^5.4",
        "orchestra/testbench": "^6.17",
        "pestphp/pest": "^1.0",
        "pestphp/pest-plugin-mock": "^1.0",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.11.27"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
